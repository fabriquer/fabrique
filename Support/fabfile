platform_agnostic_sources = files(
	ABI.cc
	Bytestream.cc
	CLIArguments.cc
	ErrorReport.cc
	Join.cc
	SourceLocation.cc
	String.cc
	exceptions.cc
);

# TODO: actually check for POSIX-ness once plugins, etc., work.
posix = true;

