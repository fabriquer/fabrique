platform_agnostic_sources = files(
	Arguments.cc
	Bytestream.cc
	ErrorReport.cc
	Join.cc
	Printable.cc
	SharedLibrary.cc
	SourceLocation.cc
	String.cc
	exceptions.cc
);

# TODO: actually check for POSIX-ness once plugins, etc., work.
posix = true;

platform_specific_sources =
	if posix files(
		PosixError.cc
		PosixSharedLibrary.cc
		os-posix.cc
	)
	else []
	;


sources = platform_agnostic_sources + platform_specific_sources;
