#
# RUN: fab --format=ninja --output=%t %s
# RUN: FileCheck %s -input-file %t
#

# CHECK: rule cc
# CHECK-NEXT:  command = cc $in -o $out
# CHECK-NEXT:  description = Compiling $in
cc = action('cc $in -o $out', description = 'Compiling $in');

# CHECK: rule cxx
# CHECK-NEXT:  command = c++ $in -o $out
# CHECK-NEXT:  description = c++ $in -o $out
# CHECK-DAG:   foo = f
# CHECK-DAG:   bar = b
cxx = action(command = 'c++ $in -o $out', bar = 'b', foo = 'f');
