#
# RUN: fab --parse-only --print-ast %s > %t
# RUN: FileCheck %s -input-file %t
#

# CHECK: foo:bool = true;
foo = true;

# CHECK: bar:int = if (foo)
# CHECK-NEXT: {
# CHECK-NEXT:   42
# CHECK-NEXT: }
# CHECK-NEXT: else
# CHECK-NEXT: {
# CHECK-NEXT:   31415926
# CHECK-NEXT: };
bar = if foo 42 else 31415926;

# CHECK: baz:string = if (not foo)
# CHECK-NEXT: {
# CHECK-NEXT:   'hello'
# CHECK-NEXT: }
# CHECK-NEXT: else
# CHECK-NEXT: {
# CHECK-NEXT:   'world'
# CHECK-NEXT: };
baz = if not foo "hello" else "world";
