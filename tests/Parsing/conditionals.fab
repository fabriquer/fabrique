#
# RUN: %fab --parse-only --print-ast %s > %t
# RUN: FileCheck %s -input-file %t
#

# CHECK: foo:bool = true;
foo = true;

# CHECK: bar:int = if true
# CHECK-NEXT:   42
# CHECK-NEXT: else
# CHECK-NEXT:   31415926
bar = if true 42 else 31415926;

# CHECK: baz:string = if foo
# CHECK-NEXT:   'hello'
# CHECK-NEXT: else
# CHECK-NEXT:   "world"
baz = if foo 'hello' else "world";

# CHECK: wibble:string = if baz
# CHECK-NEXT: {
# CHECK-NEXT:   'a'
# CHECK-NEXT: }
# CHECK-NEXT: else
# CHECK-NEXT: {
# CHECK-NEXT:   'b'
# CHECK-NEXT: };
wibble = if baz == "hello" { 'a' } else { 'b' };
