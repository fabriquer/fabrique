#
# RUN: %fab --parse-only --print-ast %s > %t
# RUN: FileCheck %s -input-file %t
#

# CHECK: foo = record
# CHECK-NEXT: {
# CHECK-DAG:   foo = 'hi';
# CHECK-DAG:   bar = 'world';
foo = record { foo = 'hi'; bar = 'world'; };

# CHECK: bar:string = foo.bar;
bar:string = foo.bar;

# CHECK: self_referential:record[def:string, ref:string] = record
# CHECK: {
self_referential:record[def:string, ref:string] = record
{
	# CHECK: def = 'Hello, world!';
	def = 'Hello, world!';

	# CHECK: ref = def;
	ref = def;
};
